<% include partials/_header %>

<div class="row align-items-md-stretch">
  <!-- NEW PRODUCT-->
  <div class="col col-md-12 col-lg-4 bg-all">
    <div class="container ">
      <!--FORM-->
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="mb-4">EDIT PRODUCT</h2>
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre de producto">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="descripcion" cols="80" placeholder="Añade una descripción"></textarea>
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="precio" placeholder="Precio">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="cantidad" placeholder="Cantidad">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="marca" placeholder="Marca">
            </div>
            <button class="btn btn-primary" type="submit">
              Editar 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>


</div>

<% include partials/_footer%>
